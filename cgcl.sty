% Background
\pgfdeclareimage[width=\paperwidth,height=\paperheight]{bg}{cgcl_background1}
\setbeamertemplate{background}{\pgfuseimage{bg}}

% Colors

\usecolortheme[RGB={0, 167, 224}]{structure}
